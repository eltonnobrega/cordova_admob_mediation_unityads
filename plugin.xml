<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova_admob_mediation_unityads" version="1.0.1"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <name>cordova_admob_mediation_unityads</name>
    <description>Cordova AdMob Mediation Plugin for Unity Ads</description>

    <engines>
        <engine name="cordova" version=">=3" />
    </engines>

    <platform name="android">
		<framework src="src/android/plugin.gradle" custom="true" type="gradleReference"/>
    </platform>

    <platform name="ios">
        <pods-config ios-min-version="9.0" use-frameworks="true" />
        <pod id="GoogleMobileAdsMediationUnity" version="3.7.5.0" />

        <!-- Prevents compilation failures when using pod's id with additional mediations plugins -->
        <dependency id="cordova-plugin-cocoapod-support" />
    </platform>
</plugin>
